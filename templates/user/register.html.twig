<h2> Formulaire d'enregistrement en base de données </h2>

<form action="post" method="POST" enctype="multipart/form-data">
	<input type="text" name="name" placeholder="Entrez votre nom"/>
	<input type="text" name="firstname" placeholder="Entrez votre prénom"/>
    <input type="text" name="username" placeholder="Entrez votre nom d'utilisateur"/>
    <input type="password" name="password" placeholder="Entrez votre mot de passe"/>
    <input type="email" name="email" placeholder="Entrez votre email"/>
    <input type="datetime" name="birthdate" placeholder="Entrez votre date de naissance"/>
	<input type="submit" value="Enregistrer">
</form>